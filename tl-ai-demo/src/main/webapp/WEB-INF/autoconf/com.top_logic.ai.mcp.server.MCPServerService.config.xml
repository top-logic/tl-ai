<?xml version="1.0" encoding="utf-8" ?>

<application config:interface="com.top_logic.basic.config.ApplicationConfig$Config"
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
>
	<services>
		<config service-class="com.top_logic.ai.mcp.server.MCPServerService"
			config:override="true"
		>
			<instance class="com.top_logic.ai.mcp.server.MCPServerService"
				keep-alive-interval="30"
				server-name="TopLogic MCP Server"
				server-version="1.0.0"
			>
				<dynamic-resources>
					<dynamic-resource class="com.top_logic.ai.mcp.server.dynamic.ConfigurableResourceTemplate"
						name="dynamic-value-{param1}-{param2}"
						title="Dynamic value test"
						uri-template="test://dynamic/{param1}/and/{param2}"
					>
						<description><![CDATA[Privides a value that embedds the passed arguments into a plain text.
]]></description>
						<content>"A generated value with dynamic value ''{0}'' and ''{1}''.".fill($param1, $param2)</content>
					</dynamic-resource>
				</dynamic-resources>
			</instance>
		</config>
	</services>
</application>