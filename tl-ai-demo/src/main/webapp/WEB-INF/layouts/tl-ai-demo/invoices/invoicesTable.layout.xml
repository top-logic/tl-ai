<?xml version="1.0" encoding="utf-8" ?>

<config:template-call
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
	template="com.top_logic/table.template.xml"
>
	<arguments
		defaultColumns="date,description,amount"
		size="300px"
		type="tl.ai.demo.imageclassification:Invoice"
	>
		<dialogs>
			<layout-reference resource="tl-ai-demo/invoices/createObject/dialog.layout.xml">
				<content-layouting class="com.top_logic.layout.structure.ContentLayouting">
					<contextMenuFactory class="com.top_logic.layout.basic.contextmenu.component.factory.PlainComponentContextMenuFactory">
						<titleProvider class="com.top_logic.layout.provider.label.NoLabelProvider"/>
						<customCommands class="com.top_logic.layout.basic.contextmenu.config.NoContextMenuCommands"/>
					</contextMenuFactory>
				</content-layouting>
			</layout-reference>
		</dialogs>
		<name key="dynamic.d2e54340-fd15-47c8-81d3-d8df806b04f1">
			<en>Invoices</en>
			<de>Belege</de>
		</name>
		<modelBuilder class="com.top_logic.model.search.providers.ListModelByExpression"
			elements="model->all(`tl.ai.demo.imageclassification:Invoice`)"
			supportsElement="element->$element.instanceOf(`tl.ai.demo.imageclassification:Invoice`)"
		/>
		<buttons>
			<button id="exportExcel"
				class="com.top_logic.layout.table.export.ExcelExportHandler"
			>
				<downloadNameProvider class="com.top_logic.layout.table.export.ComponentDownloadName"/>
			</button>
			<button id="deleteSelection"
				class="com.top_logic.layout.component.GenericDeleteCommandHandler"
				target="selection(self())"
			>
				<confirmation class="com.top_logic.tool.boundsec.confirm.DefaultDeleteConfirmation"/>
			</button>
		</buttons>
	</arguments>
</config:template-call>